{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["standard", "plugin:prettier/recommended"],
  "plugins": ["prettier"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "ignorePatterns": ["**/node_modules/**", "**/dist/**"],
  "rules": {
    "no-case-declarations": "off",
    "space-before-function-paren": "off",
    "prettier/prettier": [
      "warn",
      {
        "semi": false,
        "singleQuote": true,
        "tabWidth": 2,
        "useTabs": false,
        "trailingComma": "all",
        "arrowParens": "avoid",
        "printWidth": 80,
        "endOfLine": "auto"
      }
    ]
  }
}
